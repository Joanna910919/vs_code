###版本三

def sing_unit(num1, num2):
    n_ducks(num1)
    over_mother()
    only_n(num2)

sing_unit('Five', 'Four')
print()
sing_unit('Four', 'Three')
print()
sing_unit('Three', 'Two')


##教學

def print_msg(item, ndays = 30):
    print('please return %s in %d days' %(item, ndays))

print_msg('items')
print_msg('items', 50)
print_msg(ndays = 25, item = 'books')